.design-details
  %h1
    =t @design.capitalize

  %p
    =t :text_8
  %p
    =t :text_7

  %ul.clearfix
    - @thumbnails.each do |thumbnail|
      %li
        = image_tag "products/#{File.basename(thumbnail)}"

.design-image
  = image_tag "products/#{@design}-1.jpg"

:javascript
  $(document).ready(function() {
    $('.design-details ul li img').mouseover(function() {
      var src = $(this).attr('src').replace("_tn", "");
      $('.design-image img').attr('src', src);
    });
  });
